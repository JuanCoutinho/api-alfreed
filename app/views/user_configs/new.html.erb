<h1 class="text-center text-white font-bold text-2xl mb-8">Nova Configuração</h1>
<div class="max-w-4xl mx-auto bg-black/60 backdrop-blur-lg p-8 rounded-lg shadow-2xl border border-gray-800">
  <%= form_with model: @user_config, local: true, class: "space-y-6" do |form| %>

    <!-- Nome do Bot -->
    <div>
      <%= form.label :nome_bot, "Nome do Bot", class: "block text-white font-semibold text-lg mb-2" %>
      <%= form.text_area :nome_bot, rows: 4, class: "w-full p-3 bg-white/20 text-white placeholder-gray-300 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <!-- Emoção -->
    <div>
      <%= form.label :temperatura, "Comunicação", class: "block text-white font-semibold text-lg mb-2" %>
      <%= form.select :temperatura, 
            options_for_select([
              ["Profissional", "Profissional"],
              ["Amigavel", "Amigavel"],
              ["Humorado", "Humorado"],
              ["Descontraido", "Descontraido"],
              ["Direto", "Direto"]
            ]), 
            { prompt: "Selecione uma emoção" }, 
            class: "w-full p-3 bg-white/20 text-white border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <!-- Finalidade -->
    <div>
      <%= form.label :finalidade, "Finalidade", class: "block text-white font-semibold text-lg mb-2" %>
      <%= form.text_area :finalidade, rows: 4, class: "w-full p-3 bg-white/20 text-white placeholder-gray-300 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <!-- Base de Dados -->
    <div>
      <%= form.label :base_de_dados, "Base de Dados", class: "block text-white font-semibold text-lg mb-2" %>
      <%= form.text_area :base_de_dados, rows: 4, class: "w-full p-3 bg-white/20 text-white placeholder-gray-300 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <!-- Estrutura de Desejo -->
    <div>
      <%= form.label :estrutura_desejo, "Estrutura de Desejo", class: "block text-white font-semibold text-lg mb-2" %>
      <%= form.text_area :estrutura_desejo, rows: 4, class: "w-full p-3 bg-white/20 text-white placeholder-gray-300 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>

    <!-- Exemplo de Referência -->
    <div>
      <%= form.label :exemplo_referencia, "Exemplo de Referência", class: "block text-white font-semibold text-lg mb-2" %>
      <%= form.text_area :exemplo_referencia, rows: 4, class: "w-full p-3 bg-white/20 text-white placeholder-gray-300 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500" %>
    </div>

    <!-- Input -->
    <div>
      <%= form.label :input, "Input", class: "block text-white font-semibold text-lg mb-2" %>
      <%= form.text_area :input, rows: 4, class: "w-full p-3 bg-white/20 text-white placeholder-gray-300 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    </div>

    <!-- Imagem -->
    <div>
      <%= form.label :imagem, "Imagem do Bot", class: "block text-white font-semibold text-lg mb-2" %>
      <%= form.file_field :imagem, class: "w-full p-3 bg-white/20 text-gray-300 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-500" %>
    </div>

    <!-- Botão de Salvar -->
    <div class="text-center">
      <%= form.submit "Salvar", class: "w-full py-3 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 shadow-lg transition-transform transform hover:scale-105 focus:outline-none focus:ring-4 focus:ring-blue-400" %>
    </div>

  <% end %>
</div>

<!-- Estilo adicional para o select -->
<style>
  select {
    color: white;
    background-color: rgba(255, 255, 255, 0.2);
    border: 1px solid #4b5563;
    padding: 0.75rem;
    border-radius: 0.5rem;
  }

  select option {
    color: black;
    background-color: white;
  }

  select:focus {
    outline: none;
    box-shadow: 0 0 0 2px #6366f1;
  }
</style>
