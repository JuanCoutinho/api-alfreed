<div class="min-h-screen flex items-center justify-center bg-opacity-80">
  <div class="bg-black bg-opacity-90 text-white p-8 rounded-lg shadow-lg w-full sm:w-96">
    <h2 class="text-center text-3xl font-bold text-white mb-8">Entrar</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>
      <!-- Campo de Email -->
      <div>
        <%= f.label :email, "E-mail", class: "text-sm font-medium text-black mb-2 block" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-4 bg-black border border-gray-600 rounded-lg text-black focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300" %>
      </div>
      <br>

      <!-- Campo de Senha -->
      <div>
        <%= f.label :password, "Senha", class: "text-sm font-medium text-white mb-2 block" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-4 bg-black border border-gray-600 rounded-lg text-black focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300" %>
      </div>
      <br>

      <!-- Checkbox Lembrar-me -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-500 border-gray-400 rounded focus:ring-blue-500" %>
          <%= f.label :remember_me, "Lembrar-me", class: "ml-2 text-sm text-white" %>
        </div>
      <% end %>
      <br>

      <!-- Botão de Login -->
      <div>
        <%= f.submit "Entrar", class: "w-full py-3 bg-blue-600 text-white rounded-lg font-semibold shadow-md hover:bg-blue-500 transition duration-200" %>
      </div>

      <!-- Links adicionais -->
      <div class="text-center text-sm text-white mt-4">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Verifica se a mensagem de sucesso foi definida pelo flash
    if (document.getElementById('flash-notice')) {
      Swal.fire({
        title: 'Login bem-sucedido!',
        text: document.getElementById('flash-notice').textContent,
        icon: 'success',
        background: '#f4f6fc',  // Cor de fundo do popup
        color: '#1f2937',  // Cor do texto
        confirmButtonText: 'Ótimo!',
        confirmButtonColor: '#3b82f6',
        timer: 4000,  // Tempo em milissegundos para desaparecer
        showConfirmButton: true,
      });
    }
  });
</script>
