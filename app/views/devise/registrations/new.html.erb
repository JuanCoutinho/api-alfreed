<div class="min-h-screen flex items-center justify-center bg-opacity-80">
  <div class="bg-black bg-opacity-90 text-white p-8 rounded-xl shadow-xl w-full sm:w-96">
    <h2 class="text-center text-4xl font-extrabold text-white mb-8">Criar Conta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6") do |f| %>
      <!-- Mensagens de Erro -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Campo de E-mail -->
      <div>
        <%= f.label :email, "E-mail", class: "text-sm font-medium text-white mb-2 block" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-4 bg-black border-2 border-gray-600 rounded-lg text-black focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300" %>
      </div>

      <!-- Campo de Senha -->
      <div>
        <%= f.label :password, "Senha", class: "text-sm font-medium text-white mb-2 block" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-400">(<%= @minimum_password_length %> caracteres no mínimo)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-4 bg-black border-2 border-gray-600 rounded-lg text-black focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300" %>
      </div>

      <!-- Campo de Confirmação de Senha -->
      <div>
        <%= f.label :password_confirmation, "Confirmar Senha", class: "text-sm font-medium text-white mb-2 block" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-4 bg-black border-2 border-gray-600 rounded-lg text-black focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300" %>
      </div>

      <!-- Botão de Cadastro -->
      <div>
        <%= f.submit "Criar Conta", class: "w-full py-3 mt-2 bg-blue-600 text-white rounded-lg font-semibold shadow-lg hover:bg-blue-500 transition-all duration-300 transform hover:scale-105" %>
      </div>

      <!-- Links adicionais -->
      <div class="text-center text-sm text-white mt-2">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
