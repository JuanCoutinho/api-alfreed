<br><br><br>
<h1 class="text-4xl font-extrabold text-center text-gray-100 mb-12 tracking-wide">
  Banners Promocionais
</h1>

<!-- Botão Novo Banner -->
<div class="text-center mb-8">
  <%= link_to 'Novo Banner', new_banner_path, 
    class: 'inline-block bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white py-3 px-8 rounded-full shadow-lg transition-all duration-300 transform hover:scale-110 font-semibold' %>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 px-6">
  <% @banners.each do |banner| %>
    <div class="relative group bg-gradient-to-r from-gray-800 to-gray-900 border border-gray-700 rounded-2xl shadow-xl overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-2xl">
      <div class="relative overflow-hidden">
        <%= image_tag banner.image, alt: "Banner", 
          class: "w-full h-56 object-cover transition-transform duration-300 group-hover:scale-110 group-hover:opacity-90" %>
      </div>

      <div class="p-5">
        <div class="flex justify-between items-center">
          <!-- Botões de Ação -->
        </div>
      </div>

      <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black opacity-0 group-hover:opacity-50 transition-opacity duration-300"></div>

      <div class="absolute top-4 right-4 flex space-x-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        <!-- Botão Editar -->
        <%= link_to edit_banner_path(banner), 
          class: 'bg-gray-700 hover:bg-yellow-500 text-white p-2 rounded-full shadow-md transition' do %>
          <i class="fas fa-edit"></i>
        <% end %>

        <!-- Botão Visualizar -->
        <%= link_to banner_path(banner), 
          class: 'bg-gray-700 hover:bg-blue-500 text-white p-2 rounded-full shadow-md transition' do %>
          <i class="fas fa-eye"></i>
        <% end %>

      </div>
    </div>
  <% end %>
</div>
